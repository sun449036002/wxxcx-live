/* components/chat/chat.wxss */
.chat-box {
  height: 50vh;
  max-height: 50vh;
  overflow: hidden;
}

.chat-list {
  min-height: 40vh;
  height: 40vh;
}

.chat-list-full-scene {
  height: 50vh;
  max-height: 50vh;
   overflow-y:scroll; 
}

.chat-bottom {
  display: flex;
  height: 10vh;
}

.chat-item {
  display: flex;
  min-height: 36px;
  line-height: 36px;
  padding: 0 5px 0 15px;
}

.nickname {
  color: #FF83FA;
  margin-right: 10px;
  width:30vw;
  max-width: 30vw;
  overflow: hidden;
  white-space: nowrap; 
}

.msg {
  color: black;
  width:70vw;
  max-width: 70vw;
}

.chat-input {
  width: 66vw;
  height: 7vh;
  margin-top: 1vh;
  margin-left:10px;
  padding-left: 10px;
  border-radius: 5px;
  background-color: rgba(232, 232, 232, 0.5);
}

.btn-send {
  height: 7vh;
  margin-top: 1vh;
}
