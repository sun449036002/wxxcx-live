/* pages/main/main.wxss */

.live-list {
  height: 100vh;
}

.live-item {
  position: relative;
}

.title {
  position: absolute;
  width: 100vw;
  height: 30px;
  left: 0;
  bottom: 0;
  padding: 5px 0 0 15px;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
}

.create-room {
  position: fixed;
  right: 10px;
  bottom: 12vh;
  width: 40px;
  height: 40px;
  line-height: 40px;
  border-radius: 20px 20px 0 20px;
  margin: auto;
  font-size: 20px;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.3);
  border: 1px solid sandybrown;
  color: #fff;
  transform: rotate(-20deg);
}

.room-cover {
  width: 100vw;
}

.menu {
  position: fixed;
  bottom:0;
  height: 36px;
}
