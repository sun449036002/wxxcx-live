/* pages/live/live.wxss */
.chat {
  display: block;
  width: 100vw;
  height: 50vh;
  overflow: hidden;
}

.full-scene-icon {
  border: 1px groove #eee;
  border-radius: 3px;
  width: 30px;
  height: 30px;
  margin: 1px;
}

.ques {
  padding:15px;
  border:1px saddlebrown solid;
  height: 40vh;
  text-align: center;
}

.switch-camera {
  position: absolute;
  top: 3px;
  left: 3px;
  width: 35px;
  height: 25px;
  padding: 5px;
  color: white;
  border: 1px solid blueviolet;
  border-radius: 3px;
}
.view-box {
  position: absolute;
  width:fit-content;  
  top:3px;
  right:0;
  color:wheat;
  padding-right: 5px;
}